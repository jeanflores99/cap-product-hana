{
  "name": "cap-products",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "express": "^4",
    "@sap/cds-hana": "^2",
    "@cap-js/graphql": "^0.9.0",
    "@graphql-tools/schema": "^10.0.2",
    "@sap-cloud-sdk/http-client": "^3.10.0",
    "@sap-cloud-sdk/resilience": "^3.10.0",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.8.1",
    "@cap-js/sqlite": "^1",
    "cds-swagger-ui-express": "^0.8.0",
    "@sap/cds-dk": "^7",
    "cds-plugin-ui5": "^0.6.13"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana",
        "impl": "@sap/cds-hana",
        "deploy-format": "hdbtable"
      },
      "sapbackend": {
        "kind": "odata-v2",
        "model": "srv/external/sapbackend",
        "[development]": {
          "credentials": {
            "requestTimeout": "30000",
            "url": "http://erp13.sap4practice.com:9037/sap/opu/odata/sap/YSAPUI5_SRV_01",
            "authentication": "NoAuthentication"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "NPL_Backend"
          }
        }
      },
      "[hybrid]": {
        "db": "hana"
      }
    },
    "i18n": {
      "folders": [
        "_i18n",
        "i18n",
        "assets/i18n"
      ],
      "default_language": "es"
    },
    "features": {
      "graphql": true
    },
    "protocols": {
      "graphql": {
        "path": "/graphql",
        "impl": "@cap-js/graphql"
      }
    },
    "swagger": {
      "basePath": "/$api-docs",
      "apiPath": "",
      "diagram": true,
      "odataVersion": "4.0"
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/products_fiori"
  ]
}
